.container
  - if user_signed_in?
    .users.m-5
      %h2.card-header.users__title="ユーザー登録"
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-group.row
          = f.label :name, class: "col-sm-3 col-form-label"
          .col-sm-9
            = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
        .form-group.row
          = f.label :email, class: "col-sm-3 col-form-label"
          .col-sm-9
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
        .form-group.row
          = f.label :password, class: "col-sm-3 col-form-label"
          .col-sm-9
            = f.password_field :password, autocomplete: "new-password", class: "form-control"
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} 文字以上)
        .form-group.row
          = f.label :password_confirmation, class: "col-sm-3 col-form-label"
          .col-sm-9
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
        .form-group.row
          .actions
            = f.submit "登録", class: "btn btn-primary"
          = render "users/shared/links"

  - else
    .users--nologin.card.m-5
      %h2.card-header.users__title="ユーザー登録"
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .card-body
          = render "devise/shared/error_messages", resource: resource
          .form-group.row
            = f.label :name, class: "col-sm-4 col-md-3 col-form-label text-sm-right"
            .col-sm-8
              = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"
          .form-group.row
            = f.label :email, class: "col-sm-4 col-md-3 col-form-label text-sm-right"
            .col-sm-8
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
          .form-group.row
            = f.label :password, class: "col-sm-4 col-md-3 col-form-label text-sm-right"
            .col-sm-8
              = f.password_field :password, autocomplete: "new-password", class: "form-control"
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} 文字以上)
          .form-group.row
            = f.label :password_confirmation, class: "col-sm-4 col-md-3 col-form-label text-sm-right"
            .col-sm-8
              = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
        .card-footer
          .actions
            = f.submit "登録", class: "btn btn-primary"
          = render "users/shared/links"
