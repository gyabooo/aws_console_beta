- if current_user.admin?
  .users
    %h2.users__title="ユーザー一覧"
    %table.users__table.table.table-bordered
      %thead.thead-light
        %tr
          %th="ロール"
          %th="ユーザー名"
          %th="メールアドレス"
          %th="所属組織一覧"
          -# %th="操作"
      %tbody
        %tr
          %td=current_user.role
          %td=current_user.name
          %td=current_user.email
          %td
            - current_user.organizations.each do |organization|
              .users__table__organizations=organization.name
          -# %td.users__table__operations
          -#   .btn.btn-primary="編集"
          -#   .btn.btn-primary="削除"
        - if current_user.subordinates.present?
          - current_user.subordinates.each do |user|
            %tr
              %td=user.role
              %td=user.name
              %td=user.email
              %td
                - user.organizations.each do |organization|
                  .users__table__organizations=organization.name
              -# %td.users__table__operations
              -#   .btn.btn-primary="編集"
              -#   .btn.btn-primary="削除"